doctype html
html(lang='en')
  include header.jade
body
    // Navigation
    include nav.jade
    if firsttime
        .myform.container
            h1 Whose collections are present?
            form(action='/suggest',method='post')
                div(data-role='fieldcontain')
                    fieldset(data-role='controlgroup')
                        label(for='usernames') Users: 
                        div#nameslist
                            for username in usernames
                                div.test
                                    input(id=username, type='checkbox',name='usernames', value=username)
                                    label(for=username)
                                        | #{username}
                                    br
                        div
                            label(for='playercount') Player Count: 
                            select(class='form-control', id='playercount', name='playercount')
                                option(value=1) 1 Player
                                - for (var i=2; i<11; i++) {
                                  option(value=i) #{i} Players
                                - }
                        div
                            label(for='designers') Designers: 
                            select(class='form-control', id='designers', name='designers')
                                  for d in designers
                                    option(value=d) #{d}
                div(data-role='fieldcontain')
                    input(type='submit',value='Submit',data-transition='fade', data-theme='c')
    else
        .myform.container
            h1 
                | Games suggestions list
            ul
                for s in suggestions
                    li=s