doctype html
html(lang='en')
  include header.jade
body
    // Navigation
    include nav.jade
    if firsttime
        .myform.container
            h1 Add user data to collection manager
            form(action='/add_user',method='post')
                div(data-role='fieldcontain')
                    fieldset(data-role='controlgroup')
                        label(for='username') username
                            input(id='username',type='text',value='',placeholder='username e.g. zikky',name='username')
                div(data-role='fieldcontain')   
                    input(type='submit',value='Submit',data-transition='fade', data-theme='c')
    else
        .myform.container
            h1 
                | #{userData.username}'s data succesfully added
            ul
            for gameIdObject in userData.gameIds
                li=gameIdObject.name